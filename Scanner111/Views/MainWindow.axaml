<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Scanner111.ViewModels"
        xmlns:views="using:Scanner111.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="Scanner111.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="900" Height="700"
        MinWidth="800" MinHeight="600"
        Icon="/Assets/avalonia-logo.ico">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <TabControl Grid.Row="0"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Margin="10">

            <!-- Main Tab -->
            <TabItem Header="ðŸ  MAIN OPERATIONS">
                <views:MainTabView DataContext="{Binding MainTabViewModel}" />
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="âš™ï¸ SETTINGS">
                <views:SettingsTabView DataContext="{Binding SettingsTabViewModel}" />
            </TabItem>

            <!-- Articles Tab -->
            <TabItem Header="ðŸ“š RESOURCES">
                <views:ArticlesTabView DataContext="{Binding ArticlesTabViewModel}" />
            </TabItem>

            <!-- Backups Tab -->
            <TabItem Header="ðŸ’¾ VAULT BACKUPS">
                <views:BackupsTabView DataContext="{Binding BackupsTabViewModel}" />
            </TabItem>

        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="1"
                Background="LightGray"
                BorderBrush="Gray"
                BorderThickness="0,1,0,0"
                Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           VerticalAlignment="Center" />

                <!-- Version Info -->
                <TextBlock Grid.Column="1"
                           Text="{Binding Version}"
                           VerticalAlignment="Center"
                           Margin="10,0" />

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="5">
                    <Button Content="About"
                            Command="{Binding ShowAboutCommand}"
                            Padding="10,2" />
                    <Button Content="Exit"
                            Command="{Binding ExitCommand}"
                            Padding="10,2" />
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>