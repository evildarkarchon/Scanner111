<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Scanner111.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        x:Class="Scanner111.Views.PapyrusMonitoringView"
        x:DataType="vm:PapyrusMonitoringViewModel"
        Title="Papyrus Log Monitoring"
        Width="600" Height="400"
        WindowStartupLocation="CenterOwner">
        
    <Design.DataContext>
        <vm:PapyrusMonitoringViewModel/>
    </Design.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Papyrus Log Monitoring" 
                   HorizontalAlignment="Center" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>
                   
        <!-- Main Content -->
        <Border Grid.Row="1" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="10">
            <TextBlock Text="{Binding CurrentAnalysis.FormattedMessage}"
                       TextWrapping="Wrap"
                       FontFamily="Consolas, Courier New, monospace"/>
        </Border>
        
        <!-- Controls -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0">
            <Button Content="{Binding IsMonitoring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Stop Monitoring|Start Monitoring'}" 
                    Command="{Binding ToggleMonitoringCommand}" 
                    Padding="15,5" 
                    Margin="0,0,15,0"/>
                    
            <Button Content="Analyze Now" 
                    Command="{Binding AnalyzeLogCommand}" 
                    Padding="15,5" 
                    IsEnabled="{Binding !IsMonitoring}"
                    Margin="15,0,0,0"/>
        </StackPanel>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" 
                BorderBrush="LightGray" 
                BorderThickness="0,1,0,0" 
                Margin="0,10,0,0" 
                Padding="0,5,0,0">
            <TextBlock Text="{Binding MonitoringStatus}" 
                       TextWrapping="NoWrap" 
                       TextTrimming="CharacterEllipsis"/>        </Border>
    </Grid>
</Window>
