<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Scanner111.ViewModels"
             xmlns:md="https://github.com/whistyun/Markdown.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Scanner111.Views.ResultsView"
             x:DataType="vm:ResultsViewModel">

    <Grid ColumnDefinitions="300, *">
        <!-- Sidebar: List of Files -->
        <Border Grid.Column="0" BorderBrush="#333333" BorderThickness="0,0,1,0" Padding="10">
            <Grid RowDefinitions="Auto, *">
                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                    <Button Content="Refresh" />
                    <Button Content="Delete Selected" />
                </StackPanel>

                <ListBox Grid.Row="1" ItemsSource="{Binding Results}" SelectedItem="{Binding SelectedResult}"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FileName}" Padding="10" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Main Content: Log Detail -->
        <Border Grid.Column="1" Padding="20">
            <Grid RowDefinitions="Auto, *">
                <TextBlock Grid.Row="0" Text="{Binding SelectedResult.FileName, StringFormat='Log: {0}'}" FontSize="28"
                           FontWeight="Bold" Foreground="White" Margin="0,0,0,20" />

                <Border Grid.Row="1" Background="#222222" CornerRadius="5" Padding="10">
                    <md:MarkdownScrollViewer Markdown="{Binding SelectedResult.Content}" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>

