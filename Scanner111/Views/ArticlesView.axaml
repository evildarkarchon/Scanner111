<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Scanner111.Views.ArticlesView">

    <Grid Margin="40">
        <StackPanel Spacing="30">
            <TextBlock Text="Useful Resources &amp; Links" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Foreground="White" Margin="0,0,0,20" />

            <WrapPanel HorizontalAlignment="Center">
                <WrapPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="Width" Value="250" />
                        <Setter Property="Height" Value="80" />
                        <Setter Property="Margin" Value="10" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="Background" Value="#333333" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </WrapPanel.Styles>

                <Button Content="BUFFOUT 4 INSTALLATION" />
                <Button Content="FALLOUT 4 SETUP TIPS" />
                <Button Content="IMPORTANT PATCHES LIST" />

                <Button Content="BUFFOUT 4 NEXUS" />
                <Button Content="CLASSIC NEXUS" />
                <Button Content="CLASSIC GITHUB" />

                <Button Content="DDS TEXTURE SCANNER" />
                <Button Content="BETHINI PIE" />
                <Button Content="WRYE BASH" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>

