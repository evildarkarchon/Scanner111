<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Scanner111.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Scanner111.Views.PapyrusLogView"
             x:DataType="vm:PapyrusLogViewModel">

    <Grid RowDefinitions="Auto,*" Margin="10">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" Spacing="10">
            <Button Content="Analyze Papyrus Log"
                    Command="{Binding AnalyzeLogCommand}"
                    IsEnabled="{Binding !IsAnalyzing}" />

            <ProgressBar IsIndeterminate="True"
                         IsVisible="{Binding IsAnalyzing}"
                         Width="100"
                         Height="10"
                         VerticalAlignment="Center" />
        </StackPanel>

        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="10">
            <ScrollViewer>
                <TextBlock Text="{Binding LogAnalysisResult}"
                           FontFamily="Consolas, Courier New, Monospace"
                           TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>