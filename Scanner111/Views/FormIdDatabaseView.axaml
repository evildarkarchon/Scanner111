<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Scanner111.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="Scanner111.Views.FormIdDatabaseView"
        x:DataType="vm:FormIdDatabaseViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="FormID Database Manager">

    <Design.DataContext>
        <vm:FormIdDatabaseViewModel />
    </Design.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Info -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="FormID Database Management" FontWeight="Bold" FontSize="18" />
            <TextBlock Text="Import and manage FormID databases for enhanced crash analysis"
                       TextWrapping="Wrap" Margin="0,5,0,0" Opacity="0.8" />
        </StackPanel>

        <!-- Database Status Section -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,0,5,0" />
                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="{Binding DatabaseExists, Converter={StaticResource BoolToFormattedStringConverter}, ConverterParameter='Database Available;No Database Found'}"
                           Foreground="{Binding DatabaseExists, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='Green;Red'}" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Path:" FontWeight="SemiBold" Margin="0,5,5,0" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DatabasePath}" TextWrapping="Wrap"
                           Margin="0,5,0,0" />
            </Grid>
        </Border>

        <!-- Database Controls -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <CheckBox Grid.Row="0" Content="Enable FormID Lookups in Crash Reports"
                      IsChecked="{Binding ShowFormIdValues}"
                      Margin="0,5,0,10"
                      IsEnabled="{Binding DatabaseExists}" />

            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10">
                <Button Content="Import CSV Files"
                        Command="{Binding ImportDatabaseCommand}"
                        CommandParameter="{Binding SelectedImportDirectory}"
                        IsEnabled="{Binding !IsImporting}" />
                <Button Content="View Database Details"
                        Command="{Binding ShowDatabaseDetailsCommand}"
                        IsEnabled="{Binding DatabaseExists}" />
                <Button Content="Browse..."
                        Command="{Binding BrowseForImportDirectoryCommand}"
                        IsEnabled="{Binding !IsImporting}" />
            </StackPanel>
        </Grid>

        <!-- Progress and Status Messages -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="Import Progress:" IsVisible="{Binding IsImporting}" />
            <ProgressBar Value="{Binding ImportProgress}" Maximum="100" Height="20"
                         IsVisible="{Binding IsImporting}" Margin="0,5,0,10" />
            <Border Background="#F0F0F0" CornerRadius="3" Padding="10" MinHeight="100">
                <ScrollViewer>
                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Close" IsCancel="True" Margin="0,0,10,0" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>