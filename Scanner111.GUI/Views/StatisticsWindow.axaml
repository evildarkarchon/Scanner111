<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Scanner111.GUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Scanner111.GUI.Views.StatisticsWindow"
        Title="Scanner111 Statistics"
        Width="800" Height="600"
        WindowStartupLocation="CenterOwner">

    <Grid Background="#FF2d2d30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF0e639c" Padding="15">
            <TextBlock Text="Scan Statistics" FontSize="20" FontWeight="Bold" Foreground="White" />
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel Spacing="20">
                <!-- Summary Section -->
                <Border Background="#FF3c3c3c" CornerRadius="5" Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Summary" FontSize="16" FontWeight="Bold" Foreground="White" />
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Scans:" Foreground="#FFE0E0E0"
                                       Margin="0,0,10,5" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Name="TotalScansText" Text="0" Foreground="White"
                                       FontWeight="Bold" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Successful:" Foreground="#FFE0E0E0"
                                       Margin="0,0,10,5" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Name="SuccessfulScansText" Text="0"
                                       Foreground="#FF388E3C" FontWeight="Bold" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Failed:" Foreground="#FFE0E0E0"
                                       Margin="0,0,10,5" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Name="FailedScansText" Text="0"
                                       Foreground="#FFB71C1C" FontWeight="Bold" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Total Issues Found:" Foreground="#FFE0E0E0"
                                       Margin="0,0,10,5" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Name="TotalIssuesText" Text="0" Foreground="White"
                                       FontWeight="Bold" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Average Processing Time:"
                                       Foreground="#FFE0E0E0" Margin="0,0,10,5" />
                            <TextBlock Grid.Row="4" Grid.Column="1" Name="AvgProcessingTimeText" Text="0ms"
                                       Foreground="White" FontWeight="Bold" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Recent Scans Section -->
                <Border Background="#FF3c3c3c" CornerRadius="5" Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Recent Scans" FontSize="16" FontWeight="Bold" Foreground="White" />
                        <ListBox Name="RecentScansList" Background="#FF1e1e1e" MinHeight="200">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="vm:ScanStatisticsViewModel">
                                    <Border Background="#FF2d2d30" CornerRadius="3" Padding="10" Margin="0,2">
                                        <StackPanel>
                                            <TextBlock Text="{Binding LogFilePath}" Foreground="White"
                                                       FontWeight="Bold" />
                                            <TextBlock Text="{Binding Timestamp}" Foreground="#FFE0E0E0" FontSize="12" />
                                            <TextBlock Text="{Binding IssuesFoundText}" Foreground="#FF0e639c"
                                                       FontSize="12" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF3c3c3c" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Name="RefreshButton" Content="Refresh" Background="#FF0e639c" Foreground="White" Padding="10,5" />
                <Button Name="ClearButton" Content="Clear Statistics" Background="#FFB71C1C" Foreground="White"
                        Padding="10,5" />
                <Button Name="CloseButton" Content="Close" Background="#FF444444" Foreground="White" Padding="10,5"
                        Click="CloseButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>