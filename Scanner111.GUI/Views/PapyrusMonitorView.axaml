<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Scanner111.GUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Scanner111.GUI.Views.PapyrusMonitorView"
             x:DataType="vm:PapyrusMonitorViewModel">

    <Design.DataContext>
        <vm:PapyrusMonitorViewModel />
    </Design.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header and Controls -->
        <Border Grid.Row="0" Background="#FF0e639c" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Papyrus Log Monitor"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White" />
                <TextBlock Text="{Binding StatusMessage}"
                           FontSize="14"
                           Foreground="#FFE0E0E0"
                           Margin="0,5,0,0" />
            </StackPanel>
        </Border>

        <!-- Configuration Panel -->
        <Border Grid.Row="1" Background="#FF2d2d30" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Log Path -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Log Path:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0" />
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding MonitoredPath}"
                         IsReadOnly="True"
                         Margin="0,0,10,0" />
                <Button Grid.Row="0" Grid.Column="2"
                        Content="Browse..."
                        Command="{Binding BrowseLogFileCommand}"
                        IsEnabled="{Binding !IsMonitoring}"
                        Margin="0,0,10,0" />
                <ComboBox Grid.Row="0" Grid.Column="3"
                          SelectedItem="{Binding SelectedGameType}"
                          IsEnabled="{Binding !IsMonitoring}"
                          Width="120">
                    <ComboBoxItem>Fallout4</ComboBoxItem>
                    <ComboBoxItem>Skyrim</ComboBoxItem>
                </ComboBox>

                <!-- Monitoring Settings -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Text="Monitoring Settings"
                           FontWeight="Bold"
                           Margin="0,10,0,5" />

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
                            Orientation="Horizontal" Spacing="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Update Interval (ms):"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0" />
                        <NumericUpDown Value="{Binding MonitoringInterval}"
                                       Minimum="100"
                                       Maximum="10000"
                                       Increment="100"
                                       Width="100"
                                       IsEnabled="{Binding !IsMonitoring}" />
                    </StackPanel>

                    <CheckBox Content="Auto Export"
                              IsChecked="{Binding AutoExport}" />

                    <TextBox Text="{Binding ExportPath}"
                             Watermark="Export path..."
                             Width="200"
                             IsVisible="{Binding AutoExport}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Statistics Panel -->
            <Border Grid.Column="0" Background="#FF2d2d30" CornerRadius="5" Padding="10">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Current Statistics"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />

                        <!-- Alert Banner -->
                        <Border Background="#FFFF6B6B"
                                CornerRadius="5"
                                Padding="10"
                                Margin="0,0,0,10"
                                IsVisible="{Binding HasAlerts}">
                            <TextBlock Text="{Binding AlertMessage}"
                                       Foreground="White"
                                       FontWeight="Bold" />
                        </Border>

                        <!-- Stats Grid -->
                        <Grid IsVisible="{Binding HasStats}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Dumps -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Dumps:" Margin="0,5" />
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding DumpsCount}"
                                       FontWeight="Bold"
                                       Margin="10,5" />
                            <!-- Status indicator will be added when converter is implemented -->

                            <!-- Stacks -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Stacks:" Margin="0,5" />
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{Binding StacksCount}"
                                       FontWeight="Bold"
                                       Margin="10,5" />

                            <!-- Ratio -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Dumps/Stacks Ratio:" Margin="0,5" />
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       Text="{Binding RatioDisplay}"
                                       FontWeight="Bold"
                                       Margin="10,5" />
                            <!-- Ratio status indicator will be added when converter is implemented -->

                            <!-- Separator -->
                            <Separator Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10" />

                            <!-- Warnings -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Warnings:" Margin="0,5" />
                            <TextBlock Grid.Row="4" Grid.Column="1"
                                       Text="{Binding WarningsCount}"
                                       FontWeight="Bold"
                                       Foreground="Orange"
                                       Margin="10,5" />

                            <!-- Errors -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Errors:" Margin="0,5" />
                            <TextBlock Grid.Row="5" Grid.Column="1"
                                       Text="{Binding ErrorsCount}"
                                       FontWeight="Bold"
                                       Foreground="Red"
                                       Margin="10,5" />

                            <!-- Critical Issues Indicator -->
                            <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"
                                    Background="#FFFF0000"
                                    CornerRadius="5"
                                    Padding="10"
                                    Margin="0,10,0,0"
                                    IsVisible="{Binding HasCriticalIssues}">
                                <TextBlock Text="âš  CRITICAL ISSUES DETECTED!"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center" />
                            </Border>
                        </Grid>

                        <!-- No Stats Message -->
                        <TextBlock Text="No statistics available. Start monitoring to see data."
                                   IsVisible="{Binding !HasStats}"
                                   Foreground="#FF808080"
                                   FontStyle="Italic"
                                   Margin="0,20" />

                        <!-- History Chart Placeholder -->
                        <Border Background="#FF1e1e1e"
                                CornerRadius="5"
                                Padding="10"
                                Margin="0,20,0,0"
                                MinHeight="200">
                            <TextBlock Text="[Chart: Statistics over time]"
                                       Foreground="#FF808080"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Background="#FF3c3c3c"
                          ResizeDirection="Columns" />

            <!-- Messages Panel -->
            <Border Grid.Column="2" Background="#FF2d2d30" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Recent Messages"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding RecentMessages}"
                             Background="#FF1e1e1e">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Margin="2" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Control Buttons -->
        <Border Grid.Row="3" Background="#FF2d2d30" CornerRadius="5" Padding="10" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Button Content="Start Monitoring"
                        Command="{Binding StartMonitoringCommand}"
                        Classes="accent"
                        Width="120" />
                <Button Content="Stop Monitoring"
                        Command="{Binding StopMonitoringCommand}"
                        Width="120" />
                <Button Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Width="80" />
                <Separator Width="20" />
                <Button Content="Export Stats"
                        Command="{Binding ExportStatsCommand}"
                        Width="100" />
                <Button Content="Clear History"
                        Command="{Binding ClearHistoryCommand}"
                        Width="100" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>