<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Scanner111.GUI.Views.HelpWindow"
        Title="Scanner111 Help"
        Width="800" Height="600"
        WindowStartupLocation="CenterOwner">

    <Grid Background="#FF2d2d30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF0e639c" Padding="15">
            <TextBlock Text="Scanner111 Help Documentation" FontSize="20" FontWeight="Bold" Foreground="White" />
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel Spacing="20">
                <TextBlock Text="Getting Started" FontSize="18" FontWeight="Bold" Foreground="White" />
                <TextBlock
                    Text="Scanner111 is a crash log analyzer for Bethesda games (Fallout 4, Skyrim, etc.). It analyzes crash logs to identify problematic game modifications."
                    Foreground="#FFE0E0E0" TextWrapping="Wrap" />

                <TextBlock Text="How to Use" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,20,0,0" />
                <StackPanel Spacing="10" Margin="20,0,0,0">
                    <TextBlock Foreground="#FFE0E0E0" TextWrapping="Wrap">
                        <Run Text="1. " FontWeight="Bold" />
                        <Run
                            Text="Select a crash log file using the Browse button or drag and drop a file onto the window." />
                    </TextBlock>
                    <TextBlock Foreground="#FFE0E0E0" TextWrapping="Wrap">
                        <Run Text="2. " FontWeight="Bold" />
                        <Run Text="Optionally select your game installation path for more accurate analysis." />
                    </TextBlock>
                    <TextBlock Foreground="#FFE0E0E0" TextWrapping="Wrap">
                        <Run Text="3. " FontWeight="Bold" />
                        <Run Text="Click the Scan button to analyze the crash log." />
                    </TextBlock>
                    <TextBlock Foreground="#FFE0E0E0" TextWrapping="Wrap">
                        <Run Text="4. " FontWeight="Bold" />
                        <Run Text="Review the results in the Scan Results tab." />
                    </TextBlock>
                </StackPanel>

                <TextBlock Text="Features" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,20,0,0" />
                <StackPanel Spacing="5" Margin="20,0,0,0">
                    <TextBlock Text="• Automatic detection of problematic mods" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• FormID analysis to identify conflicting plugins" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• Settings validation and recommendations" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• Mod manager integration (MO2, Vortex)" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• FCX mode for enhanced file checking" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• Export results to various formats" Foreground="#FFE0E0E0" />
                </StackPanel>

                <TextBlock Text="Keyboard Shortcuts" FontSize="18" FontWeight="Bold" Foreground="White"
                           Margin="0,20,0,0" />
                <StackPanel Spacing="5" Margin="20,0,0,0">
                    <TextBlock Foreground="#FFE0E0E0">
                        <Run Text="Ctrl+O" FontWeight="Bold" /> - Open log file
                    </TextBlock>
                    <TextBlock Foreground="#FFE0E0E0">
                        <Run Text="Ctrl+S" FontWeight="Bold" /> - Save results
                    </TextBlock>
                    <TextBlock Foreground="#FFE0E0E0">
                        <Run Text="Ctrl+Q" FontWeight="Bold" /> - Exit application
                    </TextBlock>
                    <TextBlock Foreground="#FFE0E0E0">
                        <Run Text="F1" FontWeight="Bold" /> - Show this help
                    </TextBlock>
                    <TextBlock Foreground="#FFE0E0E0">
                        <Run Text="F5" FontWeight="Bold" /> - Refresh/Rescan
                    </TextBlock>
                </StackPanel>

                <TextBlock Text="Support" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,20,0,0" />
                <TextBlock
                    Text="For more information, bug reports, or feature requests, please visit the project repository on GitHub."
                    Foreground="#FFE0E0E0" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF3c3c3c" Padding="10">
            <Button Name="CloseButton" Content="Close" Background="#FF444444" Foreground="White"
                    Padding="10,5" HorizontalAlignment="Right" Click="CloseButton_Click" />
        </Border>
    </Grid>
</Window>