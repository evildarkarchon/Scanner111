<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="Scanner111.GUI.Views.KeyboardShortcutsWindow"
        Title="Keyboard Shortcuts"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner">

    <Grid Background="#FF2d2d30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF0e639c" Padding="15">
            <TextBlock Text="Keyboard Shortcuts" FontSize="20" FontWeight="Bold" Foreground="White" />
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- File Operations -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="File Operations" FontSize="16" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,10" />

                <Border Grid.Row="1" Grid.Column="0" Background="#FF0e639c" CornerRadius="3" Padding="8,4"
                        Margin="0,2,10,2">
                    <TextBlock Text="Ctrl+O" Foreground="White" FontFamily="Consolas" />
                </Border>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="Open log file" Foreground="#FFE0E0E0"
                           VerticalAlignment="Center" />

                <Border Grid.Row="2" Grid.Column="0" Background="#FF0e639c" CornerRadius="3" Padding="8,4"
                        Margin="0,2,10,2">
                    <TextBlock Text="Ctrl+S" Foreground="White" FontFamily="Consolas" />
                </Border>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Save results" Foreground="#FFE0E0E0"
                           VerticalAlignment="Center" />

                <Border Grid.Row="3" Grid.Column="0" Background="#FF0e639c" CornerRadius="3" Padding="8,4"
                        Margin="0,2,10,2">
                    <TextBlock Text="Ctrl+Shift+S" Foreground="White" FontFamily="Consolas" />
                </Border>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="Save as..." Foreground="#FFE0E0E0"
                           VerticalAlignment="Center" />

                <!-- Application Control -->
                <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Text="Application Control" FontSize="16" FontWeight="Bold"
                           Foreground="White" Margin="0,20,0,10" />

                <Border Grid.Row="5" Grid.Column="0" Background="#FF0e639c" CornerRadius="3" Padding="8,4"
                        Margin="0,2,10,2">
                    <TextBlock Text="Ctrl+Q" Foreground="White" FontFamily="Consolas" />
                </Border>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="Exit application" Foreground="#FFE0E0E0"
                           VerticalAlignment="Center" />

                <Border Grid.Row="6" Grid.Column="0" Background="#FF0e639c" CornerRadius="3" Padding="8,4"
                        Margin="0,2,10,2">
                    <TextBlock Text="Ctrl+," Foreground="White" FontFamily="Consolas" />
                </Border>
                <TextBlock Grid.Row="6" Grid.Column="1" Text="Open settings" Foreground="#FFE0E0E0"
                           VerticalAlignment="Center" />

                <!-- Scanning -->
                <TextBlock Grid.Row="7" Grid.ColumnSpan="2" Text="Scanning" FontSize="16" FontWeight="Bold"
                           Foreground="White" Margin="0,20,0,10" />

                <Border Grid.Row="8" Grid.Column="0" Background="#FF0e639c" CornerRadius="3" Padding="8,4"
                        Margin="0,2,10,2">
                    <TextBlock Text="F5" Foreground="White" FontFamily="Consolas" />
                </Border>
                <TextBlock Grid.Row="8" Grid.Column="1" Text="Refresh/Rescan" Foreground="#FFE0E0E0"
                           VerticalAlignment="Center" />

                <Border Grid.Row="9" Grid.Column="0" Background="#FF0e639c" CornerRadius="3" Padding="8,4"
                        Margin="0,2,10,2">
                    <TextBlock Text="Esc" Foreground="White" FontFamily="Consolas" />
                </Border>
                <TextBlock Grid.Row="9" Grid.Column="1" Text="Cancel scan" Foreground="#FFE0E0E0"
                           VerticalAlignment="Center" />

                <!-- Help -->
                <TextBlock Grid.Row="10" Grid.ColumnSpan="2" Text="Help" FontSize="16" FontWeight="Bold"
                           Foreground="White" Margin="0,20,0,10" />

                <Border Grid.Row="11" Grid.Column="0" Background="#FF0e639c" CornerRadius="3" Padding="8,4"
                        Margin="0,2,10,2">
                    <TextBlock Text="F1" Foreground="White" FontFamily="Consolas" />
                </Border>
                <TextBlock Grid.Row="11" Grid.Column="1" Text="Show help documentation" Foreground="#FFE0E0E0"
                           VerticalAlignment="Center" />
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF3c3c3c" Padding="10">
            <Button Name="CloseButton" Content="Close" Background="#FF444444" Foreground="White"
                    Padding="10,5" HorizontalAlignment="Right" Click="CloseButton_Click" />
        </Border>
    </Grid>
</Window>