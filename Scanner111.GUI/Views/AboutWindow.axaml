<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="Scanner111.GUI.Views.AboutWindow"
        Title="About Scanner111"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Grid Background="#FF2d2d30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with Logo/Icon -->
        <Border Grid.Row="0" Background="#FF0e639c" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Scanner111" FontSize="28" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center" />
                <TextBlock Text="CLASSIC Crash Log Analyzer" FontSize="14" Foreground="#FFE0E0E0"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Spacing="15" Margin="30">
            <TextBlock Text="Version 1.0.0" FontSize="16" Foreground="White" HorizontalAlignment="Center" />

            <TextBlock
                Text="A comprehensive crash log analyzer for Bethesda games including Fallout 4, Skyrim, and more."
                Foreground="#FFE0E0E0" TextWrapping="Wrap" TextAlignment="Center" Margin="0,10" />

            <Border Background="#FF3c3c3c" CornerRadius="5" Padding="15">
                <StackPanel Spacing="5">
                    <TextBlock Text="Features:" FontWeight="Bold" Foreground="White" />
                    <TextBlock Text="• Advanced FormID analysis" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• Plugin conflict detection" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• Mod manager integration" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• Real-time monitoring" Foreground="#FFE0E0E0" />
                    <TextBlock Text="• Comprehensive reporting" Foreground="#FFE0E0E0" />
                </StackPanel>
            </Border>

            <StackPanel Spacing="5" Margin="0,10">
                <TextBlock Text="C# Port of the Python CLASSIC Scanner" Foreground="#FFE0E0E0"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Built with Avalonia UI Framework" Foreground="#FFE0E0E0" HorizontalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF3c3c3c" Padding="10">
            <StackPanel>
                <TextBlock Text="© 2024 Scanner111 Project" Foreground="#FF808080" HorizontalAlignment="Center"
                           FontSize="11" />
                <Button Name="CloseButton" Content="OK" Background="#FF0e639c" Foreground="White"
                        Padding="20,5" HorizontalAlignment="Center" Margin="0,10,0,0" Click="CloseButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>